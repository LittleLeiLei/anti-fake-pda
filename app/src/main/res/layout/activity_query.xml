<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_box_to_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_huge"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:background="@drawable/shape_rectangle_with_corner"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large">

        <TextView
            android:id="@+id/tv_box_to_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="箱标查询单标"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_huge"
            android:textStyle="bold" />

        <View
            android:id="@+id/stroke_box_to_item"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_below="@id/tv_box_to_item"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/shape_white_stroke" />

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_below="@id/stroke_box_to_item"
            android:layout_marginTop="@dimen/margin_tiny"
            android:background="@drawable/shape_white_stroke" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/icon_home_entry_size"
            android:layout_height="@dimen/icon_home_entry_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_search" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_item_to_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge"
        android:layout_marginTop="@dimen/margin_huge"
        android:layout_weight="1"
        android:background="@drawable/shape_rectangle_with_corner"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large">

        <TextView
            android:id="@+id/tv_item_to_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单标查询箱标"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_huge"
            android:textStyle="bold" />

        <View
            android:id="@+id/stroke_item_to_box"
            android:layout_width="140dp"
            android:layout_height="3dp"
            android:layout_below="@id/tv_item_to_box"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/shape_white_stroke" />

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_below="@id/stroke_item_to_box"
            android:layout_marginTop="@dimen/margin_tiny"
            android:background="@drawable/shape_white_stroke" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/icon_home_entry_size"
            android:layout_height="@dimen/icon_home_entry_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_search" />

    </RelativeLayout>
</LinearLayout>