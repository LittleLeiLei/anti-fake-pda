<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_background_pressed"
    android:orientation="horizontal"
    android:padding="@dimen/padding_middle">

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_primary" />

    <TextView
        android:id="@+id/tv_format_name"
        style="@style/SingleLineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_middle"
        android:layout_weight="1"
        android:textColor="@color/text_color_secondary" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/icon_middle"
        android:layout_height="@dimen/icon_middle"
        android:layout_marginLeft="@dimen/margin_middle"
        android:src="@mipmap/ic_check"
        android:tint="@color/colorPrimary"
        android:visibility="gone" />

</LinearLayout>